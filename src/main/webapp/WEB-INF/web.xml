    </servlet>
    <servlet-mapping>
      <servlet-name>JobListingsServlet</servlet-name>
      <url-pattern>/job-listings</url-pattern> <!-- C'est l'URL qui doit correspondre -->
    </servlet-mapping>
  </web-app>


